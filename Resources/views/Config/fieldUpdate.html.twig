{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with 'OroUIBundle:Form:fields.html.twig' %}

{% set title = 'Update Entity' %}
{% oro_title_set({params : {"%username%": 'User' }}) %}

{% set formAction = path('oro_entityconfig_field_update', {id: field.id}) %}

{% block navButtons %}
    {{ UI.button({'path' : path('oro_entityconfig_view', {id: field.entity.id}), 'title' : 'Cancel', 'label' : 'Cancel'}) }}
    {{ UI.buttonType({'type': 'submit', 'class': 'btn-success', 'label': 'Save'}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {} %}
    {{ parent() }}
{% endblock pageHeader %}

{% block breadcrumbs %}
    <div class="pull-left">
        <div class="sub-title"><a href="{{ path('oro_entityconfig_index') }}">{{ 'Entities'|trans }}</a></div>
        <span class="separator">/</span>
        <div class="sub-title"><a href="{{ path('oro_entityconfig_view', {id: field.entity.id}) }}">{{ entity_config.get('label') }}</a></div>
        <span class="separator">/</span>
        {% if field.id %}
        <h1 class="user-name">{{ field_config.get('label')|default(field.code|capitalize) }}</h1>
        {% else %}
        <h1 class="user-name">New Field</h1>
        {% endif %}
    </div>
{% endblock breadcrumbs %}

{% block stats %}
    {{ parent() }}
{% endblock stats %}

{% block content_data %}
    {% set id = 'configfield-update' %}
    {% set dataBlocks = form_data_blocks(form) %}
    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
        'hiddenData': form_rest(form)
    }%}

    {{ parent() }}
{% endblock content_data %}
