{% extends bap.layout %}
{% import 'OroUIBundle::macros.html.twig' as UI %}


{#{% block content %}#}
    {#<div class="container-fluid">#}
        {#<h1>{{ (pageTitle is defined ? pageTitle : '')|trans }}#}
            {#{% if buttons is defined %}#}
                {#{% for button in buttons %}#}
                    {#{{ button }}#}
                {#{% endfor %}#}
            {#{% endif %}#}
        {#</h1>#}
    {#</div>#}
    {#{{ UI.gridBlock(gridId) }}#}
{#{% endblock content %}#}


{#{% block head_script %}#}
